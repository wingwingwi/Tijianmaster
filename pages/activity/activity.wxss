.activity-item-info{
    padding-top: 55rpx;
    justify-content: space-between;
    text-align: right;
    color: #888;
}
.activity-item-info text:before{
	content: '';
	display: inline-block;
	width: 34rpx;
	height: 34rpx;
	vertical-align: -2rpx;
	margin-right: 6rpx;
  color: #888;
}
.icon-time:before{
	background: url('../../images/shizhong.png') no-repeat 50% 50% / 100% auto;
}
.icon-xinxi:before{
	background: url('../../images/xinxi.png') no-repeat 50% 50% / 100% auto;
}

.conference-item{
	padding: 20rpx;
	border-bottom: 1rpx solid #e8e8e8;
}
.conference-item-img{
	width: 100%;
	height: 320rpx;
	overflow: hidden;
	position: relative;
}
.conference-item-img text{
	position: absolute;
	right: 0;
	top: 0;
	background: #FF8000;
	color: #fff;
	font-size: 30rpx;
	padding: 6rpx 20rpx;
}
.conference-item-img image{
	width: 100%;
  height: 320rpx;
}
.conference-item-title{
	font-size: 32rpx;
	color: #000;
}
.conference-item-info{
  color: #888;
  height: 35rpx;
  font-size: 28rpx;
}
.conference-item-tags:not(:empty){
	margin-top: 10rpx;
}
.conference-item-tags text{
	padding: 6rpx 16rpx;
	border: 1rpx solid #f7982a;
	line-height: 1;
	color: #f7982a;
	font-size: 28rpx;
	border-radius: 4rpx;
	margin-right: 10rpx;
	white-space: nowrap;
}