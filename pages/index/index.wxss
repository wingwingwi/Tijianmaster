.index-banner{
	width: 100%;
	height: 380rpx;
}
.slide-image{
	width: 100%;
  height: 380rpx;
}
.wx-swiper-dot text{
	background: #f00;
}
.index-menu{
	width: 100%;
	display: -webkit-flex;
	display: -webkit-box;
	display: flex;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
	background: #fff;
}
.index-menu-item{
	-webkit-flex: 0 0 25%;
	-webkit-box-flex: 0;
	        flex: 0 0 25%;
	max-width: 25%;
	text-align: center;
	margin-top: 10rpx;
/* 	border-top: 1rpx solid #ddd;
	border-bottom: 1rpx solid #ddd;
	border-right: 1rpx solid #ddd; */
	padding: 20rpx 20rpx;
	box-sizing: border-box;
	margin-bottom: -1rpx;
}
.index-menu-item image{
	width: 95rpx;
	height: 95rpx;
}
.index-menu-item text{
	display: block;
	font-size: 30rpx;
	line-height: 1.4;
	white-space: nowrap;
}

.my-reserve-item{
	display: flex;
	padding: 15rpx;
	border-bottom: 1rpx solid #ddd;
}
.my-reserve-img{
	width: 220rpx;
	height: 160rpx;
}
.my-reserve-img image{
	width: 220rpx;
	height: 160rpx;
}

.my-reserve-text{
	flex: 1;
	margin-left: 20rpx;
	width: 100%;
}
.my-reserve-title{
	color: #333;
	width: 100%;
	font-size: 30rpx;
	white-space: nowrap;
	overflow: hidden;
	margin-right: 38rpx;
	text-overflow: ellipsis;
}
.my-reserve-desc{
	display: block;
  font-size: 27rpx;
	color: #888;
  white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
 }
.my-reserve-time{
	display: block;
	color: #888;
  font-size: 25rpx;
  text-align: right;
  padding-top: 25rpx;
}

.my-item:before{
	content: '';
	display: inline-block;
	vertical-align: -6rpx;
	width: 6rpx;
	height: 45rpx;
	background: #FF0000;
	margin-right: 8rpx;
}
.my-item{
  display: flex;
	border-bottom: 1rpx solid #ddd;
	padding: 15rpx;
  height: 45rpx;
	font-size: 30rpx;
	background: #fff url('../../images/xiangyou1.png') no-repeat 98% 50% / auto 36rpx;
}
.go-image{
    width: 100%;
  	height: 300rpx;
    padding-top: 5rpx;
}