.service-list{
	padding: 0 10rpx;
}
.service-item{
	display: flex;
	padding: 5rpx 0; 
	border-bottom: 1rpx solid #e8e8e8;
}

.service-item image{
	width: 230rpx;
	height: 185rpx;
}
.service-text{
	flex: 1;
	margin-left: 20rpx;
	width: 100%;
}
.service-text .service-tite{
	color: #333;
	width: 100%;
	font-size: 30rpx;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.service-tags{
  padding-top: 20rpx;
  text-align: right;
}
.service-tags text{
	padding: 6rpx 16rpx;
	border: 1rpx solid #FF0000;
	line-height: 1;
	color: #FF0000;
	font-size: 28rpx;
	border-radius: 4rpx;
	margin-right: 10rpx;
	margin-bottom: 0rpx;
	white-space: nowrap;
}
.service-city{
	color: #666;
  font-size: 28rpx;
  height: 78rpx;
}
.container-body{
margin-top:75rpx;
}
.tab-nav{
	height: 75rpx;
	background: #FCFCFC;
	border-bottom: 1rpx solid #ddd;
	display: flex;
	line-height: 79rpx;
	position: relative;
}
.tab-nav text{
	display: block;
	flex: 1;
	text-align: center;
	width: 25%;
}
.tab-nav text.active{
	color: #f7982a;
}
.tab-line{
	position: absolute;
	left: 0;
	bottom: -1rpx;
	height: 4rpx;
	background: #D2691E;
	transition: all 0.3s;
}